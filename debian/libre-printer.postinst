#!/bin/sh
# postinst script

set -e

# Install dedicated user
case "$1" in
    configure)
        adduser --system --disabled-password --disabled-login --home /var/empty \
                --no-create-home --quiet --force-badname --group --gecos "LibrePrinter daemon" \
                libreprinter

        usermod -a -G dialout libreprinter
        ;;
esac

#DEBHELPER#

exit 0
